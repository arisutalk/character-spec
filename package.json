{
    "name": "@arisutalk/character-spec",
    "description": "Character specification, schema & migration for ArisuTalk",
    "version": "0.0.0",
    "contributors": [
        {
            "name": "concertypin",
            "url": "https://github.com/concertypin"
        }
    ],
    "repository": "github:arisutalk/character-spec",
    "license": "Apache-2.0",
    "engines": {
        "node": ">=22"
    },
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "type": "module",
    "scripts": {
        "build": "vite build && pnpm generate-types",
        "generate-types": "tsx scripts/generate-types.ts",
        "prepare": "pnpm exec simple-git-hooks",
        "format": "biome format --write .",
        "lint": "biome check ."
    },
    "peerDependencies": {
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.5",
        "lint-staged": "^16.2.6",
        "simple-git-hooks": "^2.13.1",
        "tsx": "^4.19.2",
        "typescript": "~5.9.3",
        "vite": "^6.4.1",
        "vite-tsconfig-paths": "^5.1.4",
        "zod": "^4.1.13",
        "zod-to-ts": "^2.0.0"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "import": "./dist/*.js",
            "types": "./dist/*.d.ts"
        }
    },
    "packageManager": "pnpm@10.16.1+sha512.0e155aa2629db8672b49e8475da6226aa4bdea85fdcdfdc15350874946d4f3c91faaf64cbdc4a5d1ab8002f473d5c3fcedcd197989cf0390f9badd3c04678706"
